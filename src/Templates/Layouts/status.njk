<!doctype html>
<html lang="fr">
{% include "Layouts/Partials/head.njk" %}
<body>
<div class="mainContent">
    {% block content %}
        <div class="indexContent">
            {% block contentHeader %}
                <header>
                    <figure>
                        <img src="{{ api.mediasUrl }}avnu-picto.png" width="122" height="138" alt="avnu" border="0" />
                    </figure>
                </header>
            {% endblock %}
            <h1>{{ title }}</h1>
            <p>{{ body | safe }}</p>
            <ul>
                {% for status in statuses %}
                    <li>
                        <span>{{ status.label }}</span> : <span class="{% if status.value %}connected{% else %}disconnected{% endif %}">{{ status.valueLabel }}</span>
                    </li>
                {% else %}
                    <li>Aucun status.</li>
                {% endfor %}
            </ul>
        </div>
    {% endblock %}
</div>
</body>
</html>
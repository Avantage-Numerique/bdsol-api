
<table align="center" role="presentation" cellspacing="0" cellpadding="0" border="0" width="100%" style="margin: auto;" class="footer">

    {% include "Emails/Layouts/Partials/logo.njk" %}
    <tr>
        <td style="padding: 0 20px; font-family: sans-serif; font-size: 12px; line-height: 15px; text-align: center; color: {{ theme.color }};">
            {% if links and links.seeAsWeb and links.seeAsWeb !== "" %}
                <a href="{{ links.seeAsWeb }}" title="{{lang.seeAsWeb}}"><webversion style="color: {{ theme.color }}; text-decoration: underline; font-weight: bold;">{{ lang.seeAsWeb }}</webversion></a>
            {% endif %}
            <br><br>
            {{ company.label }}<br/>
            {{ company.name }}<br><span class="unstyle-auto-detected-links">{{ company.address }}<br>{{ company.phone }}</span>
            <br><br>
            {% if links and links.unsuscribe and links.unsuscribe !== "" %}
                <a href="{{ links.unsuscribe }}" title="{{lang.unsuscribeLabel}}"><unsubscribe style="color: {{ theme.color }}; text-decoration: underline;">{{lang.unsuscribeLabel}}</unsubscribe></a>
            {% endif %}
        </td>
    </tr>
</table>